{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react-jsx",
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/__tests__/**", "**/__mocks__/**"]
}
